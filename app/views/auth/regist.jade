extends layout

block content
    .container
        form.form-signin(method='POST', action='/auth/regist')
            h2.form-signin-heading 注册
                a.login-regist(href='/auth/login') &nbsp;&nbsp;登录
            input.form-control(name='email', type='email', placeholder='邮箱', required='', autofocus='')
            input.form-control(name='password', type='password', placeholder='密码', required='')
            input.form-control(name='confirm', type='password', placeholder='重复密码', required='')
            button.btn.btn-lg.btn-primary.btn-block.top(type='submit') 注册
